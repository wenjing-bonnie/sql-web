<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="book" class="com.wj.hsqldb.model.Book">
    </bean>

    <bean id="jdbcConfiguration" class="com.wj.hsqldb.db.JdbcConfiguration">

    </bean>

    <bean id="dbOperation" class="com.wj.hsqldb.db.DbOperation">
        <!--ref: 通过bean\local\parent可引用其他Bean的属性-->
        <property name="jdbcConfiguration" ref="jdbcConfiguration"/>

    </bean>
    <bean id="bookManagerService" class="com.wj.hsqldb.controller.BookManagerService">
        <property name="dbOperation" ref="dbOperation"/>
    </bean>

    <bean id="bookListController" class="com.wj.hsqldb.controller.BookListController">
        <property name="bookManagerService" ref="bookManagerService"/>
    </bean>

</beans>